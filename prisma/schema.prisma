// Define the Note model
model Note {
  id      String   @id
  title   String
  content String
  color   String
  date    DateTime

  // Define the relationship with User model
}

// Define the User model
model User {
  id       String @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  notes    Note[]
}
